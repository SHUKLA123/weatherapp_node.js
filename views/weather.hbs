    <style>
        .main_menu{
            background-color: #ffcc00;
        }
        .navbar-toggler{
            background-color:white;
            color: black;
        }
        .bi-brightness-high-fill{
            transition: all linear;
            animation: rot 2s infinite;
        }
        @keyframes rot {
            0%{
                
                transform: rotate(0deg);

            }
            100%{
                transform: rotate(360deg);
            }
        }
        .main_header_left{

            height: 30rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;

        }
        body{
            height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .main_header_right{

            height: 30rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;

            }
        .main_header_left p {
            font-size: 1rem;
            font-family: 'Cairo', sans-serif;
        }
        .main_header_left h1 {
            font-size: 1.7rem;
            margin: 0.6rem 0 1.7rem 0;
            text-transform: capitalize;
        }
        .temp_form{
            width: 60%;
            position: relative;
            margin: 4rem auto 2rem;
        }
        .temp_form input[type = "text"]
        {
            width : 100%;
            padding : 1rem 3rem 1rem 1rem;
            background-color: #1e202b;
            color: white;
            outline: none;
            border: none;
            font-size: 1rem;
            border-radius: 3rem;
        }
        .temp_form input[type = "submit"]{
            position: absolute;
            top: 5px;
            right: 5px;
            bottom: 5px;
            border: none;
            background-color: #009ad8;
            padding: 0 3rem;
            border-radius: 3rem;
            color: white;
            font-size: 0.7rem;
        }
        .tempInformation{
            width: 20rem;
            margin: auto;
            min-height: 20rem;
            background-color: #323544;
            border-radius: 0.5rem;
            padding: 0.5rem;
            font-family: "Roboto", "sans-serif";
        }
        .top_layer{
            width: 100%;
            height: 20%;
            background-color: #2d303d;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-radius: 1rem;
            padding: 2rem 0;
        }
        .top_layer p{
            
            color: #fff;
            font-weight: 30;
            padding: 2rem;

        }
        .main_layer{
            width: 100%;
            height: 80%;
            display: flex;
            flex-direction: column;
            padding: 2rem;
        }
        .main_layer #city_name{
            padding: 2rem 0;
            color: #bfc1c8;
            font-weight: 300;
            font-size: 1rem ;
        }
        .main_layer .middle_layer{
            display: flex;
            justify-content: space-around;
            color: #fff;

        }
        .main_layer .middle_layer p,
        .main_layer .middle_layer .fa{
            font-size: 2rem;
            font-weight: 900;
        }
        .fa{
            color: #009ad8;
        }
        sup{
            font-size: 1rem;
            margin-top: -2rem;
        }
        .data_hide{
             
            transition: all 0.3s linear;
        }

        footer{
            width: 100%;
            background-color: #ffcc00;
            margin-top: auto;
        }
        footer p{
            margin: 0;
            text-align: center;
            color: white;
            line-height: 2rem;
            font-size: 1rem;
        }

        @media (max-width: 768px) {
            .main_header_left{
                height: auto;
                margin: 5rem 0;
            }
            .main_header_right{
                height: auto;
                margin-top: 3rem ;
            }
            .temp_form{
            width: 60%;
            position: relative;
            margin: 4rem auto 2rem;
        }
        .temp_form input[type = "text"]
        {
            width : 100%;
            padding : 0.7rem 2rem 0.7rem 0.7rem;
            background-color: #1e202b;
            color: white;
            outline: none;
            border: none;
            font-size: 0.6rem;
            border-radius: 3rem;
        }
        .temp_form input[type = "submit"]{
            position: absolute;
            top: 5px;
            right: 5px;
            bottom: 5px;
            border: none;
            background-color: #009ad8;
            padding: 0 1rem;
            border-radius: 1rem;
            color: white;
            font-size: 0.7rem;
        }

        }
    </style>
